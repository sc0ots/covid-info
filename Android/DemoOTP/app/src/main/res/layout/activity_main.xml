<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LOGIN.MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Covid Info"
        android:textSize="50dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/cub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:text="Đăng nhập để tiếp tục"
        android:textColor="#969ead"
        android:textSize="24sp" />

    <TextView

        android:id="@+id/phonenuber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cub_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="Số điện thoại"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView

        android:id="@+id/phonenuber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cub_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/phonenuber"
        android:text="*"
        android:textColor="#F60303"
        android:textSize="24sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/box3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="30dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện thoại"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/next"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/box3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        app:cardBackgroundColor="#F56258"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tiếp tục"
            android:textColor="#fff"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:visibility="gone"></ProgressBar>
</RelativeLayout>